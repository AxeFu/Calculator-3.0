<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.axeplay.calculator.Controller"
            prefHeight="370" prefWidth="250">
    <TextField fx:id="inputField" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10"
               prefHeight="50" style="-fx-font-size:20" onAction="#calc"/>
    <TilePane AnchorPane.topAnchor="70" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10"
            hgap="10" vgap="10">

        <Button prefWidth="50" prefHeight="50" text="(" style="-fx-font-size:20" onMousePressed="#onButtonPressed"/>
        <Button prefWidth="50" prefHeight="50" text=")" style="-fx-font-size:20" onMousePressed="#onButtonPressed"/>
        <Button prefWidth="50" prefHeight="50" text="C" style="-fx-font-size:20" onMousePressed="#onButtonPressed"/>
        <Button prefWidth="50" prefHeight="50" text="&lt;-" style="-fx-font-size:20" onMousePressed="#onButtonPressed"/>
        <Button prefWidth="50" prefHeight="50" text="7" style="-fx-font-size:20" onMousePressed="#onButtonPressed"/>
        <Button prefWidth="50" prefHeight="50" text="8" style="-fx-font-size:20" onMousePressed="#onButtonPressed"/>
        <Button prefWidth="50" prefHeight="50" text="9" style="-fx-font-size:20" onMousePressed="#onButtonPressed"/>
        <Button prefWidth="50" prefHeight="50" text="/" style="-fx-font-size:20" onMousePressed="#onButtonPressed"/>
        <Button prefWidth="50" prefHeight="50" text="4" style="-fx-font-size:20" onMousePressed="#onButtonPressed"/>
        <Button prefWidth="50" prefHeight="50" text="5" style="-fx-font-size:20" onMousePressed="#onButtonPressed"/>
        <Button prefWidth="50" prefHeight="50" text="6" style="-fx-font-size:20" onMousePressed="#onButtonPressed"/>
        <Button prefWidth="50" prefHeight="50" text="*" style="-fx-font-size:20" onMousePressed="#onButtonPressed"/>
        <Button prefWidth="50" prefHeight="50" text="1" style="-fx-font-size:20" onMousePressed="#onButtonPressed"/>
        <Button prefWidth="50" prefHeight="50" text="2" style="-fx-font-size:20" onMousePressed="#onButtonPressed"/>
        <Button prefWidth="50" prefHeight="50" text="3" style="-fx-font-size:20" onMousePressed="#onButtonPressed"/>
        <Button prefWidth="50" prefHeight="50" text="-" style="-fx-font-size:20" onMousePressed="#onButtonPressed"/>
        <Button prefWidth="50" prefHeight="50" text="." style="-fx-font-size:20" onMousePressed="#onButtonPressed"/>
        <Button prefWidth="50" prefHeight="50" text="0" style="-fx-font-size:20" onMousePressed="#onButtonPressed"/>
        <Button prefWidth="50" prefHeight="50" text="=" style="-fx-font-size:20" onMousePressed="#onButtonPressed"/>
        <Button prefWidth="50" prefHeight="50" text="+" style="-fx-font-size:20" onMousePressed="#onButtonPressed"/>

    </TilePane>
</AnchorPane>
